name: Fedora

on:
  push:
    branches: [ master, dev ]
  pull_request:
    branches: [ master, dev ]

jobs:
  test:
    runs-on: ubuntu-latest
    
    strategy:
      fail-fast: false
      matrix:
        tag: [34, 35, 36, 37]

    container: fedora:${{ matrix.tag }}

    steps:
      - run: dnf -y update
      - run: dnf -y install curl xz g++

      - uses: actions/checkout@v3

